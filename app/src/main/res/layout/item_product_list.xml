<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_weight="3.49"
         />

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvProductName"
            android:layout_below="@+id/tvProductName"
            android:layout_marginTop="16dp"
            android:text="Precio:" />

        <TextView
            android:id="@+id/tvCrcPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvPrice"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/tvPrice" />

        <TextView
            android:id="@+id/tvDollarPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="$"
            android:layout_below="@+id/tvCrcPrice"
            android:layout_alignStart="@+id/tvCrcPrice" />

    </RelativeLayout>
</LinearLayout>
