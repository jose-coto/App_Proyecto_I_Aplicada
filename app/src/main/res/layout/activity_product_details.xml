<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cr.ac.ucr.app_proyecto_i_aplicada.ProductDetailsActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />

    <ImageView
        android:id="@+id/iVProductDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/images"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnBuyProductDetail"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:text="@string/btnBuyProductDetail"
        android:layout_marginBottom="181dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvProductNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvProductNameDetail"
        android:layout_below="@+id/iVProductDetail"
        android:layout_marginTop="16dp"
        android:text="Precio:" />

    <TextView
        android:id="@+id/tvValuePriceProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvPrice"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/tvValueDollarPriceProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBuyProductDetail"
        android:layout_alignEnd="@+id/tvValuePriceProductDetail" />

</RelativeLayout>
