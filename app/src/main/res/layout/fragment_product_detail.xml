<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cr.ac.ucr.app_proyecto_i_aplicada.ProductDetailFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cr.ac.ucr.app_proyecto_i_aplicada.ProductDetailsActivity">


        <ImageView
            android:id="@+id/iVProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/images"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnBuyProductDetail"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvPrice"
            android:layout_marginBottom="181dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="@string/btnBuyProductDetail" />

        <TextView
            android:id="@+id/tvProductNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="22dp"
            android:layout_marginTop="21dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvProductNameDetail"
            android:layout_below="@+id/iVProductDetail"
            android:layout_marginTop="16dp"
            android:text="Precio:"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvValuePriceProductDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvPrice"
            android:layout_below="@+id/tvPrice"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvValueDollarPriceProductDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnBuyProductDetail"
            android:layout_alignEnd="@+id/tvValuePriceProductDetail"
            android:textSize="15dp"
            android:textStyle="normal"
            android:layout_toEndOf="@+id/tvValuePriceProductDetail" />

    </RelativeLayout>

</FrameLayout>
